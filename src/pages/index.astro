---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
---

<Layout title='Frontend Mentor | Blog preview card'>
	<main class='h-dvh w-dvw flex flex-col justify-center items-center container'>
		<Card href='https://github.com/YeiserBytes/blog-preview-card'>
			<img
				src='/illustration-article.svg'
				alt=''
				class='rounded-2xl'
			/>

			<section class='flex flex-col items-start pt-6'>
				<p class='px-4 py-2 bg-yellow font-bold rounded-md'>Learning</p>
				<p class='pt-3'>Published 21 Dec 2023</p>
				<h1 class='hover:text-yellow duration-300 pt-5 font-bold text-2xl'>
					HTML & CSS foundations
				</h1>
				<p class='pt-5 max-w-[35ch] text-black/55'>
					These languages are the backbone of every website, defining structure,
					content, and presentation.
				</p>
			</section>

			<div class='flex pt-6 items-center gap-4'>
				<img
					src='/image-avatar.webp'
					alt=''
					class='w-10 h-10 rounded-full'
				/>
				<span class='font-bold'>Greg Hooper</span>
			</div>
		</Card>
		<div class='absolute bottom-2 text-[11px]'>
			Challenge by <a
				href='https://www.frontendmentor.io?ref=challenge'
				target='_blank'
				>Frontend Mentor</a
			>. Coded by <a
				href='https://github.com/yeiserbytes'
				target='_blank'
				class='text-[hsl(228,45%,44%)]'
				>YeiserBytes</a
			>.
		</div>
	</main>
</Layout>
